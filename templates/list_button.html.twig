    {% endif %}
        {% if actions.icon is defined %}<i class="{{actions.icon}}"></i>{% endif %}
        {{ (actions.label is defined?actions.label:actions.route|humanize)|trans({}, 'SonataAdminBundle') }}
    </a>
{% endif %}