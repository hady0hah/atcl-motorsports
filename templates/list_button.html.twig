{% if admin.isGranted(actions.route|upper, object) and admin.hasRoute(actions.route) %}
    {% if actions.params is defined %}
        <a href="{{ admin.generateObjectUrl(actions.route, object, actions.params) }}" target="{{ actions.target is defined?actions.target:'_self' }}" class="btn btn-sm view_link {{actions.class is defined?actions.class:'btn-default'}}" title="{{ (actions.label is defined?actions.label:actions.route|humanize)|trans({}, 'SonataAdminBundle') }}">
